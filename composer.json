{
    "name": "krak/validation",
    "description": "Functional validation library",
    "type": "library",
    "homepage": "https://github.com/krakphp/validation",
    "keywords": [
        "validation",
        "validator",
        "functional"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "RJ Garcia",
            "email": "rj@bighead.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Krak\\Validation\\": "src"
        },
        "files": [
            "src/inc.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Krak\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "doctrine/common": "^2.5",
        "phake/phake": "^2.0",
        "phpunit/phpunit": "~4.0",
        "symfony/validator": "^2.7",
        "symfony/var-dumper": "^2.0"
    },
    "suggest": {
        "doctrine/orm": "needed for any of the doctrine validators",
        "symfony/validator": "needed for the symfony validators"
    },
    "require": {
        "krak/cargo": "^0.2.3",
        "krak/invoke": "^0.1.0",
        "nikic/iter": "^1.4"
    }
}
